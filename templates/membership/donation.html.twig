{% extends 'base.html.twig' %}

{% block banner '' %}
{% block page_title 'Je donne' %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        Kernel.onLoad(function() {
            App.runDonation();
        });
    </script>
{% endblock %}

{% block content %}
    <section class="l__wrapper--medium">
        <header class="space--60-0 l__wrapper--slim">
            <h1 class="text--center text--large">
                Je soutiens En Marche !
            </h1>
            <br/>
            <h3 class="text--center">Vous êtes une majorité à donner 50€</h3>
        </header>

        <hr class="l__wrapper b__nudge--bottom-large" />

        <div class="donation__amount l__wrapper--slim">
            <form method="get" action="{{ path('donation_index', { 'adhesion' : true }) }}">
                <p class="montant">
                    Sélectionnez le montant de votre don :
                </p>

                <input name="montant"
                       id="donation-amount"
                       class="form form__field form--full"
                       type="number" min="0.01" max="7500" step="0.01" value="{{ amount }}" />

                <div class="b__nudge--top-10">
                    <a href="https://storage.googleapis.com/en-marche-fr/bulletin-de-don-EMa.pdf">Je donne par chèque</a>
                </div>

                <div class="form--full text--center space--30">
                    <a class="btn form btn" href="{{ path('app_membership_complete') }}">Passer cette étape</a>
                    <button class="btn--primary form btn" type="submit">Je donne</button>
                </div>
            </form>
        </div>
    </section>
{% endblock %}
